# 电商数据管理系统 - 环境变量配置模板
# 复制此文件为 .env 并修改相应的值

# === 数据库配置 ===
DATABASE_URL=mysql+pymysql://ecommerce_user:password@mysql:3306/ecommerce_db
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=ecommerce_db
MYSQL_USER=ecommerce_user
MYSQL_PASSWORD=password

# === 应用配置 ===
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-change-this-to-random-string
JWT_SECRET_KEY=your-production-jwt-secret-change-this-to-random-string

# === 服务端口配置 ===
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
BACKEND_PORT=5000
MYSQL_PORT=3306

# === 文件存储配置 ===
UPLOAD_PATH=./data/uploads
MAX_FILE_SIZE=100MB

# === 安全配置 ===
# JWT Token 过期时间（秒）
JWT_ACCESS_TOKEN_EXPIRES=3600

# === 时区配置 ===
TZ=Asia/Shanghai

# === 日志配置 ===
LOG_LEVEL=INFO
LOG_FILE=/var/log/app.log

# === SSL 配置（可选） ===
# 如果启用HTTPS，请配置以下证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# === 备份配置 ===
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点

# === 性能配置 ===
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
FLASK_WORKERS=4

# === 监控配置（可选） ===
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false 